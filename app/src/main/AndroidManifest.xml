<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eghh.beerapp.common.fragments"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="19" />

    <application
        android:name="com.eghh.beerapp.common.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >



        <activity
            android:name="com.eghh.beerapp.common.activities.MainActivity"
            android:label="@string/app_name">

        </activity>

        <activity
            android:name="com.eghh.beerapp.common.activities.SplashActivity"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/app_name" android:name="com.eghh.beerapp.common.activities.BeerInfoActivity"
            android:parentActivityName="com.eghh.beerapp.common.activities.MainActivity"/>
    </application>
</manifest>