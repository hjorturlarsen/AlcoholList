<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eghh.beerapp.common.fragments">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.eghh.beerapp.common.volley.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/beerTheme" >



        <activity
            android:name="com.eghh.beerapp.common.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">


        </activity>

        <activity
            android:name="com.eghh.beerapp.common.activities.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/app_name"
            android:name="com.eghh.beerapp.common.activities.BeerInfoActivity"
            android:parentActivityName="com.eghh.beerapp.common.activities.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="com.eghh.beerapp.common.activities.RandomBeersActivity"
            android:parentActivityName="com.eghh.beerapp.common.activities.MainActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>