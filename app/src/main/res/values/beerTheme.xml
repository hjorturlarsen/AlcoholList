<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="beerTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@drawable/beer_background</item>
        <item name="android:textColor">@color/appGrey</item>
        <item name="android:buttonStyle">@style/themeButton</item>
    </style>

    <style name="themeButton" parent="@style/Theme.AppCompat.Light">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>